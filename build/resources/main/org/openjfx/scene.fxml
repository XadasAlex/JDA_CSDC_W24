<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.Region?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="0"
      prefWidth="600" prefHeight="400"
      fx:controller="org.openjfx.FXMLController">

    <!-- Left side with Buttons to switch sub-menus-->
    <VBox fx:id="leftBox"
          style="-fx-background-color: #f0f0f0;"
          minWidth="200"
          prefWidth="200">
        <Label text="%menu.menu" style="-fx-font-size: 16;"/>
        <Button text="%menu.general" onAction="#showAllgemein"/>
        <Button text="%menu.language" onAction="#showSprache"/>
        <!-- Toggle Button für das Dropdown-Menü -->
        <ToggleButton fx:id="featuresToggle" text="%menu.features" onAction="#toggleFeaturesMenu"/>

        <!-- Dropdown-Inhalte (anfangs unsichtbar) -->
        <VBox fx:id="featuresMenu" visible="false" managed="false" spacing="5" style="-fx-padding: 10;">
            <ToggleButton fx:id="statsToggle" text="%features.stats" onAction="#toggleStatsmenu"/>
            <VBox fx:id="statsMenu" visible="false" managed="false" spacing="5">
                <Label text="%stats.yourguilds"/>
                <ListView fx:id="guildListView"/>
            </VBox>
            <Button text="Option 1"/>
            <Button text="uhu"/>
            <Button text="Option 3"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/>
        <Button text="%menu.about" onAction="#showAbout"/>
        <Button fx:id="startBTN" text="%bot.start" layoutX="50" layoutY="20" onAction="#startBot"/>

    </VBox>
    <BorderPane fx:id="rightPane"
                HBox.hgrow="ALWAYS">
        <!--Hauptinhalt rechts -->
        <center>
            <StackPane fx:id="centerPane">
                <VBox fx:id="firstPane" visible="true">
                    <Label text="%features.yourBotToken"/>
                    <TextField fx:id="botTokenFirst"
                               promptText="%features.botTokenPrompt"
                               onAction="#getBotToken"/>
                </VBox>

                <GridPane fx:id="allgemeinPane" visible="false"
                          alignment="TOP_LEFT"
                          hgap="10" vgap="10">
                    <rowConstraints>
                        <RowConstraints percentHeight="20"/>
                        <RowConstraints percentHeight="20"/>
                        <RowConstraints percentHeight="20"/>
                        <RowConstraints percentHeight="20"/>
                        <RowConstraints percentHeight="20"/>
                    </rowConstraints>
                    <!-- Erste Zeile links: Foto -->
                    <ImageView fx:id="profileIV" layoutX="20" layoutY="120" fitHeight="100" fitWidth="100"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <!-- Logged in als: name des Bots-->
                    <Label fx:id="sessionL" layoutX="20" layoutY="80" text="Logged In:" GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>
                    <!-- Auswahl (Status) -->
                    <ComboBox fx:id="statusCombo" GridPane.rowIndex="0" GridPane.columnIndex="2">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Online"/>
                                <String fx:value="Idle"/>
                                <String fx:value="Do Not Disturb"/>
                                <String fx:value="Invisible"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <!-- Kommt noch-->
                    <Label fx:id="statusL" layoutX="120" layoutY="120" text="Status:" GridPane.rowIndex="1"
                           GridPane.columnIndex="0"/>
                    <Label fx:id="serverListL" layoutX="20" layoutY="50" text="Server List:" GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>
                </GridPane>

                <!-- Sprache-pane braucht noch absprache-->
                <VBox fx:id="sprachePane" visible="false">
                    <Label text="Sprachen"/>
                    <ComboBox fx:id="localeComboBox" onAction="#changeLocale"/>
                </VBox>

                <!-- Feature-pane -->
                <VBox fx:id="featuresPane" visible="false">
                    <Label text="%features.gptToken"/>
                    <TextField fx:id="gptApikey"
                               promptText="%features.gptTokenprompt"
                               onAction="#getGptApikey"/>
                    <Label text="%features.yourBotToken"/>
                    <TextField fx:id="botToken"
                               promptText="%features.botTokenPrompt"
                               onAction="#getBotToken"/>
                </VBox>
                <VBox fx:id="aboutPane" visible="false">
                    <Label text="It's all about the Benjamins, baby"/>
                </VBox>

                <VBox fx:id="rankingPane" visible="false" spacing="10" style="-fx-padding: 10;">
                    <Label fx:id="guildTitle" style="-fx-font-size: 16;" />
                    <TableView fx:id="rankingTableView" editable="true">
                        <columns>
                            <!-- Spalte für Member-ID -->
                            <TableColumn fx:id="memberIdColumn" minWidth="125" text="%stats.memberID" />
                            <!-- Spalte für EXP -->
                            <TableColumn fx:id="expColumn" text="%stats.experience" />
                            <!-- Spalte für Messages Sent -->
                            <TableColumn fx:id="messagesSentColumn" text="%stats.messagesSentCollumn" />
                            <TableColumn fx:id="otherReactionCountColumn" text="%stats.otherReactionCountCollumn"/>
                            <TableColumn fx:id="selfReactionCountColumn" text="%stats.selfreactionCountCollumn"/>
                            <TableColumn fx:id="botInteractionsColumn" text="%stats.botInteractionsColumn"/>
                            <TableColumn fx:id="totalTimeColumn" text="%stats.totalTime"/>
                            <TableColumn fx:id="lastTimeJoinedColumn" text="%stats.lastTimeJoined"/>
                            <TableColumn fx:id="charactersSentColumn" text="%stats.charactersSentColumn"/>
                            <TableColumn fx:id="inVoiceColumn" text="%stats.inVoiceColumn"/>
                        </columns>
                    </TableView>
                </VBox>
            </StackPane>
        </center>
        <!-- BOTTOM-Area, only on the right/ bottom side (For names usecases etc.) -->
        <bottom>
            <HBox spacing="10" style="-fx-background-color: #e0e0e0;" alignment="CENTER_RIGHT">
                <children>
                    <Label text="%footer.footer"/>
                </children>
            </HBox>
        </bottom>
    </BorderPane>
</HBox>