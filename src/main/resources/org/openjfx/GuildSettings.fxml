<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 10;" stylesheets="@css/general.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.GuildSettingsController">
    <Label fx:id="guildSettingsTitle" style="-fx-font-size: 16;" text="Select a Guild for Management" />
    <ListView fx:id="guildListView" prefHeight="150" />
    <Separator />
    <VBox spacing="5">
        <Label fx:id="guildSettingsSelected" style="-fx-font-size: 14;" text="Guild Settings" />
        <ToggleButton fx:id="allowSpamToggle" onAction="#toggleColor" prefWidth="200" text="Allow Spam" />
        <ToggleButton fx:id="allowSwearToggle" onAction="#toggleColor" prefWidth="200" text="Allow Swear Words" />
        <ToggleButton fx:id="welcomeMessageToggle" onAction="#toggleColor" prefWidth="200" text="Welcome Messages" />
        <ToggleButton fx:id="leaveMessageToggle" onAction="#toggleColor" prefWidth="200" text="Leave Messages" />
        <ToggleButton fx:id="dedicatedBotChannelsToggle" onAction="#toggleColor" prefWidth="200" text="Dedicated Bot Channels" />
        <Separator />
        <Button fx:id="saveSettingsButton" onAction="#saveSettings" text="Save Settings" />
    </VBox>
</VBox>
