<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.controllers.GuildSettingsController"
      spacing="10" style="-fx-padding: 10;">
    <Label fx:id="guildSettingsTitle" text="Select a Guild for Management" style="-fx-font-size: 16;" />
    <ListView fx:id="guildListView" prefHeight="150" />
    <Separator/>
    <VBox spacing="5">
        <Label fx:id="guildSettingsSelected" text="%guildSettings.settingsSelected" style="-fx-font-size: 14;" />
        <ToggleButton fx:id="allowSpamToggle" text="%guildSettings.allowSpam" prefWidth="200" onAction="#toggleColor"/>
        <ToggleButton fx:id="allowSwearToggle" text="%guildSettings.allowSwear" prefWidth="200" onAction="#toggleColor"/>
        <ToggleButton fx:id="welcomeMessageToggle" text="%guildSettings.welcomeMessage" prefWidth="200" onAction="#toggleColor"/>
        <ToggleButton fx:id="leaveMessageToggle" text="%guildSettings.leavemessages" prefWidth="200" onAction="#toggleColor"/>
        <ToggleButton fx:id="dedicatedBotChannelsToggle" text="%guildSettings.dedicatetBotChannel" prefWidth="200" onAction="#toggleColor"/>
        <Separator/>
        <Button fx:id="saveSettingsButton" text="%guildSettings.saveSettings" onAction="#saveSettings" />
    </VBox>
</VBox>