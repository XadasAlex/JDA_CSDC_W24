<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 10;" stylesheets="@css/general.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.RankingController">
    <Label style="-fx-font-size: 16;" text="Select a Guild for Ranking" />
    <ListView fx:id="guildListView" />
    <Button onAction="#showRankingsForSelectedGuild" text="Show Rankings" />
    <TableView fx:id="rankingTableView">
        <columns>
            <TableColumn fx:id="memberNameColumn" text="Member Name" />
            <TableColumn fx:id="expColumn" text="Experience" />
            <TableColumn fx:id="messagesSentColumn" text="Messages Sent" />
            <TableColumn fx:id="charactersSentColumn" text="Characters Sent" />
            <TableColumn fx:id="totalTimeColumn" text="Total Time (Voice)" />
            <TableColumn fx:id="inVoiceColumn" text="In Voice" />
            <TableColumn fx:id="lastTimeJoinedColumn" text="Last Joined (Voice)" />
        </columns>
    </TableView>
</VBox>
